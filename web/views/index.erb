<html>
<head>
  <meta charset="utf-8">
  <link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.6/css/bootstrap.css" rel="stylesheet">
  <link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.6/js/bootstrap.js" rel="stylesheet">
  <title>fetch_tieba</title>
</head>
<body>
<div class="container" style="padding-top: 80px;">
  <h2>主题数量Top 10</h2>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>主题数量</th>
    </tr>
    </thead>
    <tbody>
    <% User.top_10_active.each do |user| %>
        <tr>
          <th><%= user.name %></th>
          <th><%= user.topics.count %></th>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
</body>
